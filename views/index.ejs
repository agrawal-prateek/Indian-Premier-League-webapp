            </div>
        </div>

    </section>
    <section class="modal-section">
        <div id="modal-02" class="">

            <div id="btn-close-modal" class="close-modal-02">
                <md-button class="md-fab" aria-label="FAB" onclick="">
                    <md-icon md-svg-src="/images/cross.svg"></md-icon>
                </md-button>
            </div>

            <div class="modal-content">
                <div layout="row" layout-align="center center">
                    <div layout="column" layout-align="center center">
                        <div></div>
                        <div id="white-modal">
                            <br>
                            <p><span>City: </span><span class="city">Banglore</span></p>
                            <p><span>Date: </span> <span class="date"></span></p>
                            <p><span>Team1: </span> <span class="team1"></span></p>
                            <p><span>Team2: </span> <span class="team2"></span></p>
                            <p><span>Toss-winner: </span> <span class="toss-winner"></span></p>
                            <p><span>Toss-decision: </span> <span class="toss-decision"></span></p>
                            <p><span>Winner: </span> <span class="winner"></span></p>
                            <p class="win-by"><span>Win by: </span>
                                <span class="win-by-runs"></span> <span>Runs</span>
                                <span class="win-by-wickets"></span> <span>Wickets</span>
                            </p>
                            <p><span>Venue: </span> <span class="venue"></span></p>
                            <p><span>Umpire1: </span> <span class="umpire1"></span></p>
                            <p><span>Umpire2: </span> <span class="umpire2"></span></p>

                        </div>
                        <div></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<% include scripts.ejs %>
</body>
<script>
    angular.module('App', ['ngMaterial'])
        .controller('AppCtrl', function ($scope, $mdDialog, $interval) {

        });
    $('#hamburger').removeClass('is-open').addClass('is-closed');
    $('#hamburger').removeClass('is-closed').addClass('is-open');
    $('#hamburger').removeClass('is-open').addClass('is-closed');
</script>
</html>
